# API Configuration
API_KEY=dev-key-12345
# Or use hashed key (recommended):
# API_KEY_HASH=<output of: python -c "from api.auth import hash_api_key; print(hash_api_key('your-key'))">
API_KEY_SALT=change-me-in-production

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/memory_db

# Encryption key for memory data (REQUIRED)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# WARNING: Do not commit real keys to version control
ENCRYPTION_KEY=your-generated-encryption-key-here

# Audit log integrity secret (optional)
AUDIT_SECRET_KEY=change-me-in-production

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_AUTH_FAILURES=10

# CORS Origins (comma-separated)
CORS_ORIGINS=*

# OpenAI (for demo app)
OPENAI_API_KEY=your-openai-api-key-here
